
<div class="jumbotron" style = "background-color: powderblue;">
 <div class="text-lead text-center">
        <span class="h2 doctor-name mb-4">Welcome Dr <%= current_user.name %></span>
        <h3> All your patients below</h3>
        <h4> Change personal or patient information via this page </h4>
        <h4> click home to revert back to all patients </h4>
        </div>
</div>

<h3> Your Information</h3>
<table class="table">
    <thead>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Client's</th>
    </thead>
    <tbody>
        <td><%= current_user.id %></td>
        <td><%= current_user.name %></td>
        <td><%= current_user.email %></td>
        <td><%= current_user.patients.count %></td>
    </tbody>
</table>
<div class="row">
        <div class="col-md-12">
 <%= link_to "Edit Information", edit_user_registration_path, class: "btn btn-primary" %>
        </div>
    </div>
    <br />
    <br />
<h3> Your Patients </h3>
         <table class="table patient-list sortable" id="patientTable">
                <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Address</th>
      <th>Dob</th>
      <th>Phoneno</th>
      <th>Infection</th>
      <th>Injury</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      
       <% @user_patients.each do |patient|  %>
      <tr>
        <td><%= link_to patient.firstname, patient_path(patient) %></td>
        <td><%= patient.lastname %></td>
        <td><%= patient.address %></td>
        <td><%= patient.dob %></td>
        <td><%= patient.phoneno %></td>
        <td><%= patient.infection %></td>
        <td><%= patient.injury %></td>
        
        
         </tr>
    <% end %>
  </tbody>
</table>
<div class="row">
        <div class="col-md-12">
 <%= link_to "New Patient", new_patient_path, class: "btn btn-primary " %>
        </div>
    </div>
        
         
         
        