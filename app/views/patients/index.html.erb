
<p id="notice"><%= notice %></p>

<div class="container-fluid">
    <div class="text-lead text-center">
        <span class="h2 doctor-name mb-4">Welcome Dr <%= current_user.name %></span>

<%= form_tag(patients_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Patients By Lastname" %>
  <%= submit_tag "Search" %>
<% end %>
</div>
</div>
<br> 
<br>

<div class="row">
        <div class="col-md-12">
 <%= link_to "New Patient", new_patient_path, class: "btn btn-primary " %>
        </div>
    </div>
  <div class="col-md-12">
        <% if @user_patients  ==0 %>
		    <center><h3>There are no patients</h3></center>
		<% else %>
            <table class="table patient-list sortable" id="patientTable">
                <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Address</th>
      <th>Dob</th>
      <th>Phoneno</th>
      <th>Infection</th>
      <th>Injury</th>
    
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.firstname %></td>
        <td><%= patient.lastname %></td>
        <td><%= patient.address %></td>
        <td><%= patient.dob %></td>
        <td><%= patient.phoneno %></td>
        <td><%= patient.infection %></td>
        <td><%= patient.injury %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
   
        
      </tr>
    <% end %>
  </tbody>
</table>


    
<br>

    <% end %>