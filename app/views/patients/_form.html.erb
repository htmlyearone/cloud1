  </div>
</div>

 <div class="form-group row">
   <%= form.label :address, :class => 'col-md-3 col-form-label text-md-right' %>
 <div class="col-md-9">
   <%= form.text_field :address, id: :patient_address  %>
  </div>
</div>

<div class="form-group row">
