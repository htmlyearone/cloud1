  
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card card-default">
                <div class="card-header">
                    <div class="text-lead h5">
                  
                    </div>
                </div>
                <div class="card-body">
<%= form_with(model: patient, local: true) do |form| %>
